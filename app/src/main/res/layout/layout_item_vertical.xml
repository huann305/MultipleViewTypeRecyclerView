<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/img_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/a"
        android:scaleType="fitCenter"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img_image"
        android:src="@drawable/a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:text="List speed up"
        android:textColor="#101010"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_avatar"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/img_image"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⋮"
        android:textStyle="bold"
        android:textSize="27dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#101010"
        android:layout_below="@+id/img_image"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txt_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vũ Bá Huấn - "
        android:layout_below="@+id/txt_title"
        android:layout_toEndOf="@+id/img_avatar"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1T lượt xem - "
        android:layout_below="@+id/txt_title"
        android:layout_toEndOf="@+id/txt_channel_name"/>
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 giờ trước"
        android:layout_below="@+id/txt_title"
        android:layout_toEndOf="@+id/txt_view"/>

</RelativeLayout>